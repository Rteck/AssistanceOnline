@model IEnumerable<AssistanceOnlineDAL.Courses>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-6">
        <h2>My courses</h2>
    </div>
    <div class="col-md-6" style="text-align:right">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new course
        </button>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-12">
        @foreach (var item in Model)
        {
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingTwo">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="panel-title">
                                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#@item.idCourse" aria-expanded="false" aria-controls="collapseTwo">
                                        @item.name
                                    </a>
                                </h4>
                            </div>
                            <div class="col-md-6" style="text-align:right">
                                @Html.ActionLink("Details", "Details", new { id = item.idCourse })
                            </div>
                        </div>

                    </div>
                    <div id="@item.idCourse" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                        <div class="panel-body">
                            <form class="form-inline">
                                <div class="form-group mx-sm-3">
                                    <label for="nasist" class="sr-only">Numero de Asistencias</label>
                                    <input type="number" class="form-control" id="nasist" placeholder="" min="1" value="1">
                                </div>
                                <button type="submit" class="btn btn-primary">Generar Asistencias</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
@Html.Partial("modalCreate", new AssistanceOnlineDAL.Courses())

