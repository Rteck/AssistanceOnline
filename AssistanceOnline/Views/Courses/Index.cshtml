@model IEnumerable<AssistanceOnlineDAL.Courses>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-6">
        <h2>My courses</h2>
    </div>
    <div class="col-md-6" style="text-align:right">
        <button type="button" class="btn btn-primary"  onclick="modalCourse()">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new course
        </button>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-12">
        <div id="dvCourses"></div>
    </div>
</div>

@using (Ajax.BeginForm("CreateForm", "Courses", new AjaxOptions() { HttpMethod = "POST", LoadingElementId = "ajaxLoader", OnSuccess = "succesAddCourse", OnBegin = "beginAddCourse", OnFailure = "failAddCourse" }))
{
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title" id="myModalLabel">New Course</h2>
            </div>
            <div class="modal-body">
               
                    @Html.AntiForgeryToken()

                   <div id="modalContent"></div>

                    
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
}
<script type="text/javascript">
    $(document).ready(function () {
        courses();
    });

    function courses() {
        $('#ajaxLoader').show();
        $.ajax({
            url: 'Courses/TableCourses', //se manda llamar el archivo php que se usara para comunicar con el servidor
            type: 'GET',// tipo de dato que recibira el archivo php
            data: {

            }, // variables que se mandaran al php
            success: function (data) // funcion que es llamada cuando se realizo con exito el archivo php
            {
                $('#dvCourses').html(data);
                $('#ajaxLoader').hide();
            },
            error: function () {
                alert("Controller"); // el error estaria en el archivo php
                $('#ajaxLoader').hide();

            }
        });
    }

    function modalCourse() {
        $.ajax({
            url: 'Courses/modalCreate', //se manda llamar el archivo php que se usara para comunicar con el servidor
            type: 'GET',// tipo de dato que recibira el archivo php
            data: {

            }, // variables que se mandaran al php
            success: function (data) // funcion que es llamada cuando se realizo con exito el archivo php
            {
                $('#modalContent').html(data);
                $('#myModal').modal('show');
            },
            error: function () {
                alert("Controller"); // el error estaria en el archivo php
                $('#ajaxLoader').hide();

            }
        });
        

    }

    function succesAddCourse() {
        courses();
    }

    function beginAddCourse() {
        $('#myModal').modal('hide');
    }

    function failAddCourse() {
        alert("Fallo");
    }

</script>















